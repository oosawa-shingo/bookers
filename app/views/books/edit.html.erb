<div>
  <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <div class="errors-message">
    <h2>!!Unable to post due to error!!</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

<%= form_with model: @book do |f| %>

   <div class="title-body">
      <h4>Title</h4>
       <%= f.text_field :title %>
    </div>

    <div class="title-body">
      <h4>Body</h4>
       <%= f.text_area :body %>
    </div>

 <div class="action">
   <%= f.submit 'Update Book' %>
 </div>

  <%= link_to "Show", "/books/#{@book.id}" %>

  |

  <%= link_to "Back", "/books" %>

<% end %>