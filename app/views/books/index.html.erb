<p class="notice"><%= flash[:notice] %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>

   <% @books.each do |book| %>

    <tr>
     <td><%= book.title %></td>

     <td><%= book.body %></td>

     <td>
      <%= link_to "Show", "/books/#{book.id}" %>
     </td>

     <td>
      <%= link_to "Edit", "/books/#{book.id}/edit" %>
     </td>

     <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
     </td>
    </tr>
   <% end %>

  </tbody>
 </table>

  <h2>New book</h2>

  <div class="new-book">

  <% if @book.errors.any? %>
  <div class="errors-message">
    <h2>!!Unable to post due to error!!</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


  <%= form_with model: @books.new do |f| %>
    <div class="title-body">
      <h4>本のタイトル</h4>
       <%= f.text_field :title %>
    </div>

    <div class="title-body">
      <h4>感想</h4>
       <%= f.text_area :body %>
    </div>

    <div class="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  </div>